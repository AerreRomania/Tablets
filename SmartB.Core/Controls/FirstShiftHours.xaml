            </Frame>
            <Frame Style="{StaticResource FrameStyle}">
                <FlexLayout Style="{StaticResource FlexLayoutStyle}">
                    <Label x:Name="H11LabelHeader" Text="11" Style="{StaticResource LabelHeaderStyle}"/>
                    <Label x:Name="H11Label" Style="{StaticResource LabelStyle}" />
                    <BoxView  Style="{StaticResource BoxStyle}" />
                    <StackLayout Orientation="Horizontal" Spacing="0">
                        <Label x:Name="H11LabelEfficiency" Style="{StaticResource EfficiencyLabelStyle}" />
