                                <Label
                                    FontAttributes="Bold"
                                    FontSize="21"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding EfficiencyTotal, StringFormat='{0:0.0}%'}"
                                    TextColor="DimGray" />
